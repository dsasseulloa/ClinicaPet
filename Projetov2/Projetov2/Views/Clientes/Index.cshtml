@model PagedList.IPagedList<Projeto.Models.Cliente>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Clientes</h3>
                </div>


                <div class="row fileupload-buttonbar">
                    <div class="col-lg-8">

                        <a href="@Url.Action("Create", "Clientes")" class="btn btn-primary">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>
                                <strong>Cadastrar Cliente</strong>
                            </span>
                        </a>
                        <a href="@Url.Action("Index", "Animals")" class="btn btn-success">

                            <span>
                                <strong>Verificar Animais</strong>
                            </span>
                        </a>

                    </div>
                </div>
                <br>
                <div class="box-body">



                    @using (Html.BeginForm("Index", "Clientes", FormMethod.Get))
                    {

                        <p>
                            &nbsp;&nbsp;&nbsp;
                            Procurar por Nome: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                            <input type="submit" value="Search" />
                        </p>
                    }

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Nome
                                    </th>
                                    <th>
                                        Sexo
                                    </th>
                                    <th>
                                        Data de Nascimento
                                    </th>
                                    <th>
                                        CPF
                                    </th>
                                    <th>
                                        Contato
                                    </th>

                                    @*<th>
                    Contato2
                </th>
                <th>
                    Endereço
                </th>
                <th>
                    Bairro
                </th>
                <th>
                    Cidade
                </th>
                <th>
                    Estado
                </th>
                <th>
                    CEP
                </th>*@
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Data de Cadastro
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sexo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataNascimento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CPFouRG)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contato)
                                        </td>
                                        @*<td>
                        @Html.DisplayFor(modelItem => item.Contato2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereço)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CEP)
                    </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataCadastro)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Clientes", new { id = item.ClienteID })" class="btn btn-primary btn-xs">

                                                <span>
                                                    <strong>Editar</strong>
                                                </span>
                                            </a>
                                            <a href="@Url.Action("Details", "Clientes", new { id = item.ClienteID })" class="btn btn-info btn-xs">

                                                <span>
                                                    <strong>Detalhes</strong>
                                                </span>
                                            </a>
                                            <a href="@Url.Action("EditAnimais", "Animais", new { id = item.ClienteID })" class="btn btn-success btn-xs">

                                                <span>
                                                    <strong>Animais</strong>
                                                </span>
                                            </a>
                                            &nbsp;&nbsp;
                                            <a href="@Url.Action("Delete", "Clientes", new { id = item.ClienteID })" class="btn btn-danger btn-xs">

                                                <span>
                                                    <strong>Deletar</strong>
                                                </span>
                                            </a>

                                        </td>
                                    </tr>
                                    </tbody>
                                    }

                            </table>




                    <div class="form-group">
                        <br />&nbsp;&nbsp;&nbsp;
                        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
                        <div class="form-group col-md-12">
                            @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                        </div>
                    </div>


                </div>
                <!-- /.box-body -->
            </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
</section>

    <script src="~/admilte2/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/admilte2/datatables.net/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
