    <!-- /.row -->
</section>

<div id="modal" class="modal fade" role="dialog" />

@section Scripts{
    <!-- JS -->
    @Scripts.Render("~/bundles/jqueryval")

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>
    <script>


    


        $(document).ready(function () {
            $("#demoGrid").DataTable({

                "language": {
                    "lengthMenu": "Exibe _MENU_ Registros por página",
                    "search": "Procurar",
                    "paginate": { "previous": "Retorna", "next": "Avança" },
                    "zeroRecords": "Nada foi encontrado",
                    "info": "Exibindo página _PAGE_ de _PAGES_",
                    "infoEmpty": "Sem registros",
                    "infoFiltered": "(filtrado de _MAX_ regitros totais)"
                },

                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,

                "ajax": {
                    "url": "/Clientes/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },

                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        "targets": [7],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [8],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [9],
                        "searchable": false,
                        "orderable": false
                    }],

                "columns": [
                    { "data": "ClienteID", "name": "ClienteID", "autoWidth": true },
                    { "data": "Nome", "name": "Nome", "autoWidth": true },
                    { "data": "Sexo", "title": "Sexo", "name": "Sexo", "autoWidth": true },
                    { "data": "Contato", "name": "Contato", "autoWidth": true },
                    { "data": "Cidade", "name": "Cidade", "autoWidth": true },
                    { "data": "CEP", "name": "CEP", "autoWidth": true },
                    { "data": "Endereço", "name": "Endereço", "autoWidth": true },
                    { "data": "Contato2", "name": "Contato2", "title": "Status", "autoWidth": true, },
                    {
                        "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/Cliente/Edit/' + full.ClienteID + '">Editar</a>'; }
                    },
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.ClienteID + "'); >Deletar</a>";
                        }
                    },
                    {"render": function (data, type, full, meta) {
                        return '<a href="@Url.Action("Edit","Clientes")?id=' + full.ClienteID + '" class="editAsset">Edit</a> | <a href="@Url.Action("Details", "Clientes")?id=' + full.ClienteID + '">Details</a> | <a href="@Url.Action("Delete", "Clientes")?id=' + full.ClienteID + '">Delete</a>';
                                }   }
                ]
            });
        });



    function DeleteData(ClienteID) {
        if (confirm("Tem certeza que quer deletar este cadastro? ...?")) {
            Delete(ClienteID);
        }
        else {
            return false;
        }
    }


        function Delete(ClienteID) {
        var url = '@Url.Content("~/")' + "Clientes/DeleteCustomer";
            $.post(url, { ID: ClienteID }, function (data) {
            if (data == "Deleted") {
                alert("Deletar Cliente");
                oTable = $('#demoGrid').DataTable();
                oTable.draw();
            }
            else {
                alert("Something Went Wrong!");
            }
        });
    }
    </script>

}   