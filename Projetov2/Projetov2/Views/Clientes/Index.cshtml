}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Clientes</h3>
                </div>


                <div class="row fileupload-buttonbar">
                    <div class="col-lg-8">
                        &nbsp;&nbsp;&nbsp;
                        <a href="@Url.Action("Create", "Clientes")" class="btn btn-primary">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>
                                <strong>Cadastrar Cliente</strong>
                            </span>

                        </a>

             

                        <a href="@Url.Action("Index", "Animals")" class="btn btn-success">

                            <span>
                                <strong>Verificar Animais</strong>
                            </span>
                        </a>

                    </div>
                </div>
                <br>

                <div class="box-body">

                        <table id="demoGrid" class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ClienteID</th>
                                    <th>Nome</th>
                                    <th>Sexo</th>
                                    <th>Contato</th>
                                    <th>Cidade</th>
                                    <th>CEP</th>
                                    <th>Endereço</th>
                                    <th>Contato2</th>
