@model Projeto.Models.Funcionario

@{
    ViewBag.Title = "Create";

}

<head>
    <section class="content-header">
        <h1>
            Cadastro
            <small> Funcionário</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Página Inicial</a></li>
            <li><a href="/Funcionario/Index">Index</a></li>
            <li class="active">Cadastro</li>
        </ol>
    </section>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="mb"><i class="empty"></i> </h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>

                        <div class="form-group col-md-12">
                            <label class="control-label col-md-2" for="Name">Nome*</label>
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome Completo" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label class="control-label col-md-2" for="CPF">CPF*</label>
                                @Html.EditorFor(model => model.CPFouRG, new { htmlAttributes = new { @class = "form-control", @id = "cpf", placeholder = "CPF" } })
                                @Html.ValidationMessageFor(model => model.CPFouRG, "", new { @class = "text-danger" })
                                <span class="text-danger">@ViewBag.ErrorMessageCPF</span>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label col-md-6" for="Data de Nascimento">Data de Nascimento*</label>
                                @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control", placeholder = "__/__/____" } })
                                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-2">
                                <div class="form-group">
                                    <label class="control-label col-md-2" for="CPF">Sexo*</label>
                                    @Html.DropDownListFor(model => model.Sexo, new List<SelectListItem>
                                   { new SelectListItem { Text = "Masculino", Value = "Masculino"},
                                   new SelectListItem { Text = "Feminino", Value = "Feminino"}
                                   }, "Selecionar sexo", new { @class = "form-control" })

                                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-row">

                            <div class="form-group col-md-4">
                                <label class="control-label col-md-2" for="CPF">Celular*</label>

                                @Html.EditorFor(model => model.Contato, new { htmlAttributes = new { @class = "form-control", @id = "telefone" } })
                                @Html.ValidationMessageFor(model => model.Contato, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label col-md-2" for="Name">Telefone</label>

                                @Html.EditorFor(model => model.Contato2, new { htmlAttributes = new { @class = "form-control", @id = "telefone2" } })
                                @Html.ValidationMessageFor(model => model.Contato2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-8">
                            @Html.LabelFor(model => model.Endereço, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Endereço, new { htmlAttributes = new { @class = "form-control", placeholder = "Rua tal, n.30" } })
                            @Html.ValidationMessageFor(model => model.Endereço, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.CEP, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "form-control", @id = "cep", placeholder = "CEP" } })
                            @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Cidade" } })
                                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control", placeholder = "Bairro" } })
                                @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })

                                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", placeholder = "Estado" } })
                                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.Cargo, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EnumDropDownListFor(model => model.Cargo, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-3">
                                <label class="control-label col-md-2" for="CPF">Salário*</label>
                                @Html.EditorFor(model => model.Salario, new { htmlAttributes = new { @class = "form-control", placeholder = "Salario" } })
                                @Html.ValidationMessageFor(model => model.Salario, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-3">
                                <label class="control-label col-md-6" for="CPF">Data de Admissão*</label>
                                @Html.EditorFor(model => model.DataAdmissao, new { htmlAttributes = new { @class = "form-control", placeholder = "Data Admissao" } })
                                @Html.ValidationMessageFor(model => model.DataAdmissao, "", new { @class = "text-danger" })
                            </div>


                        </div>


                        <div class="box-footer">


                            <div class="form-row">

                                <div class="row mt">
                                    <div class="col-lg-6 col-md-6 col-sm-12">
                                        <button class="btn btn-theme" value="Create" type="submit">Salvar</button>

                                        <a href="@Url.Action("Index", "Funcionarios")" class="btn btn-theme04">
                                            <span>
                                                <strong>Cancelar</strong>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>









}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")
}