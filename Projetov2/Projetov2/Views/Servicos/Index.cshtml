@model IEnumerable<Projeto.Models.Servicos>

@{
    ViewBag.Title = "Index";

}

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Serviços</h3>
                </div>
                <div class="row fileupload-buttonbar">
                    <div class="col-lg-8">
                        &nbsp;&nbsp;&nbsp;
                        <a href="@Url.Action("Create", "Servicos")" class="btn btn-primary">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>
                                <strong>Cadastrar Serviço</strong>
                            </span>
                        </a>

                    </div>
                    <br>
                    <div class="box-body">



                        <table class="table table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Preco)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th>Ações</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Preco)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>

                                        <a href="@Url.Action("Edit", "Servicos", new { id = item.ServicoID })" class="btn btn-success btn-xs">

                                            <span>
                                                <strong>Editar</strong>
                                            </span>
                                        </a>
                                        <a href="@Url.Action("Details", "Servicos", new { id = item.ServicoID })" class="btn btn-primary btn-xs">

                                            <span>
                                                <strong>Detalhes</strong>
                                            </span>
                                        </a>
                                        &nbsp;&nbsp;&nbsp;
                                        <a href="@Url.Action("Delete", "Servicos", new { id = item.ServicoID })" class="btn btn-danger btn-xs">

                                            <span>
                                                <strong>Deletar</strong>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

